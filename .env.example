# Discord Music Contest Bot - Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Database configuration (optional - defaults shown)
DATABASE_PATH=suno_contests.db
BACKUP_DIR=backups
MAX_BACKUPS=10

# Rate limiting (optional - defaults shown)
RATE_LIMIT_SUBMISSIONS=5
RATE_LIMIT_WINDOW=60
RATE_LIMIT_DELETIONS=10

# Request settings (optional - defaults shown)
REQUEST_TIMEOUT=5
MAX_RESPONSE_SIZE=1048576

# Logging (optional - defaults shown)
LOG_FILE=bot.log
LOG_LEVEL=INFO

# Webhook URLs for monitoring (optional)
# LOG_WEBHOOK_URL=https://discord.com/api/webhooks/...
# ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Feature flags (optional - defaults shown)
ENABLE_VOTING=true
ENABLE_ANALYTICS=false
